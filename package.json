{
    "name": "veritas",
    "version": "0.7.2",
    "description": "The extension library for pragmatists with elegance.",
    "keywords": [
        "extension",
        "utility",
        "helper"
    ],
    "homepage": "https://github.com/morrighan/veritas#readme",
    "bugs": {
        "url": "https://github.com/morrighan/veritas/issues"
    },
    "license": "LGPL-3.0",
    "author": {
        "name": "Yongbin Min",
        "email": "contact@cichol.com",
        "url": "https://www.cichol.com/"
    },
    "main": "libraries/veritas.js",
    "directories": {
        "lib": "libraries",
        "test": "tests"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/morrighan/veritas.git"
    },
    "scripts": {
        "prebuild": "rm -rf libraries",
        "build": "gulp build",
        "prepages": "if [ ! -d 'gh-pages' ]; then git clone --branch gh-pages ./gh-pages; fi",
        "pages": "gulp pages",
        "test": "nyc -x gulpfile.babel.js -x tests mocha -r ./sources/veritas --compilers js:babel-register tests",
        "coveralls": "nyc report -r text-lcov | coveralls",
        "debug": "node -r babel-register -r ./sources/veritas"
    },
    "dependencies": {
        "babel-runtime": "^6.23.0"
    },
    "devDependencies": {
        "autoprefixer": "^7.1.1",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-register": "^6.24.1",
        "cssnano": "^3.10.0",
        "gulp": "^3.9.1",
        "gulp-babel": "^6.1.2",
        "gulp-cached": "^1.1.1",
        "gulp-postcss": "^7.0.0",
        "gulp-pug": "^3.3.0",
        "gulp-remember": "^0.3.0",
        "gulp-sass": "^3.1.0",
        "gulp-sourcemaps": "^2.6.0",
        "mocha": "^3.4.2",
        "should": "^11.2.1",
        "vinyl-named": "^1.1.0",
        "webpack-stream": "^3.2.0"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "babel": {
        "plugins": [
            "transform-es2015-modules-commonjs",
            "transform-runtime"
        ]
    }
}
